{
    "compilerOptions": {
        "target": "ES5",
        "lib": ["DOM", "ES2019"],
        "moduleResolution": "node",
        "module": "commonjs",
        "resolveJsonModule": true,
        "outDir": "dist",
        "esModuleInterop": true,
        "sourceMap": true,
        "declaration": true,
        "noImplicitAny": true,
        "noImplicitThis": true,
        "strictNullChecks": true,
        "strictFunctionTypes": true
    },
    "include": ["src"],
    "exclude": ["node_modules", "src/**/*.spec.*", "src/**/*.generators.*"]
}
